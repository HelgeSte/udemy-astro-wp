import BlockRenderer from '../components/BlockRenderer.astro'
import type {Block} from "@wp-block-tools/styles";
import CommonHead from '../components/CommonHead.astro';

export async function getStaticPaths(){
	const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
		method: "POST",
		headers: {
			"content-type": "application/json"
		},
		/* uri was added later (not when he created the query in GraphQL) */
		/* remove the following from the query, since lots of pages might crash the site:
		 blocks
			seo {
				title
				metaDesc
			}
		*/
		body: JSON.stringify({
			query: `
			query AllPages {
				pages(first:10000){ 
					nodes {
						uri
					}
				}
			} 
			`
		})});
	const {data} = await response.json();
	//if it works, the address  http://localhost:4321/contact-us should not give us a 404 error
	return data.pages.nodes.map((page: any) => ( // adding :any, so intellisense won't mark think this as an error
		{ // want to return an object
		params: {slug: page.uri == "/" ? undefined : page.uri },
		// Pass down props
		props: {
			seo: page.seo,
			blocks: page.blocks // pass down blocks 
			}
		}
	))
}

